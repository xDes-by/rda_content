<root>
	<styles>
        <include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/layout/custom_game/forge/forge.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/layout/custom_game/forge/forge_variables.js" />
        <include src="file://{resources}/layout/custom_game/forge/forge_view_processing.js" />
		<include src="file://{resources}/layout/custom_game/forge/forge_functions.js" />
	</scripts>
	<snippets>
		<snippet name="UpgradeItemSnippet">
			<Panel>
				<!-- <DOTAItemImage id="ItemIcon" itemname="" >
                </DOTAItemImage> -->
                <Image id="ItemIcon" class="" src="" />
				<Label id="ItemName" text="name" />
                <Label id="GemBuff" class="" text="+10000 чего-то там" html="true" />
			</Panel>
		</snippet>
	</snippets>
	<Panel class="root" hittest="false">
		<Panel id="ShopMenuPanel" class="ShopMenuPanel">
			<Panel id="UpgradePanel" hittest="true">
				<Panel id="StatusPanel">
					<Label id="Status" text="#ui_custom_shop_upgrade_item_status_lable" />
				</Panel>
				<Panel id="UpgradeItemPanel" hittest="false" />
				<Panel id="UpgradeInfoPanel">
					<!-- <DOTAItemImage id="ItemIconNew" itemname="" >
                        <Image id="" class="ItemIconGem_Image" src="file://{resources}/images/custom_game/smithy/purple_gem.png" />
                        <Image id="" class="ItemIconGem_Image" src="file://{resources}/images/custom_game/smithy/blue_gem.png" />
                        <Image id="" class="ItemIconGem_Image" src="file://{resources}/images/custom_game/smithy/orange_gem.png" />
                        <Image id="" class="ItemIconGem_Image" src="file://{resources}/images/custom_game/smithy/red_gem.png" />
                        <Image id="" class="ItemIconGem_Image" src="file://{resources}/images/custom_game/smithy/green_gem.png" />
                    </DOTAItemImage> -->
                    <Image id="ItemIconNew" class="" src="" />
					<Image id="ItemIconBorderNew" hittest="false" src="file://{resources}/images/custom_game/forge/item_border_png.png" />
					<Image id="chanceArrow" src="file://{resources}/images/custom_game/forge/chance_arrow_png.png" />
					<Label id="OldLevelItem" text="1 LVL" />
					<Label id="NewLevelItem" text="2 LVL" />
                    <Panel class="TabContainerClass">
                        <Button id="UpdateButtonTab" class="TabButtonClass" onactivate="SwitchDisplayMode('levelup')">
                            <Label class="TabLabelClass" text="#ui_custom_shop_upgrade_item_1" />
                        </Button>
                        <Button id="GemsButtonTab" class="TabButtonClass" onactivate="SwitchDisplayMode('stones')">
                            <Label class="TabLabelClass" text="#ui_custom_shop_upgrade_item_2" />
                        </Button>
                    </Panel>
                    <Label id="GemBuffDescription" class="" text="+10000 чего-то там" html="true" />
					<Panel id="ExtensionsPanel">
                        <Panel id="GemsMainContainer_Panel" class="">
                            <Panel id="" class="GemContainer_Panel" onactivate="ProcessGemSelectionButtonPress(1)" onmouseover="ShowGemTooltip(1)" onmouseout="HideGemTooltip()">
                                <Image id="" class="GemImage_Image" src="file://{resources}/images/custom_game/smithy/purple_gem.png" />
                                <Label id="" class="GemAmount_Label" text="4847" />
                                <Panel id="" class="GemLock_Panel">
                                    <Image id="" class="GemLock_Image" src="file://{resources}/images/custom_game/lock_white.png" />
                                </Panel>
                            </Panel>
                            <Panel id="" class="GemContainer_Panel" onactivate="ProcessGemSelectionButtonPress(2)" onmouseover="ShowGemTooltip(2)" onmouseout="HideGemTooltip()">
                                <Image id="" class="GemImage_Image" src="file://{resources}/images/custom_game/smithy/blue_gem.png" />
                                <Label id="" class="GemAmount_Label" text="4847" />
                                <Panel id="" class="GemLock_Panel">
                                    <Image id="" class="GemLock_Image" src="file://{resources}/images/custom_game/lock_white.png" />
                                </Panel>
                            </Panel>
                            <Panel id="" class="GemContainer_Panel" onactivate="ProcessGemSelectionButtonPress(3)" onmouseover="ShowGemTooltip(3)" onmouseout="HideGemTooltip()">
                                <Image id="" class="GemImage_Image" src="file://{resources}/images/custom_game/smithy/orange_gem.png" />
                                <Label id="" class="GemAmount_Label" text="4847" />
                                <Panel id="" class="GemLock_Panel">
                                    <Image id="" class="GemLock_Image" src="file://{resources}/images/custom_game/lock_white.png" />
                                </Panel>
                            </Panel>
                            <Panel id="" class="GemContainer_Panel" onactivate="ProcessGemSelectionButtonPress(4)" onmouseover="ShowGemTooltip(4)" onmouseout="HideGemTooltip()">
                                <Image id="" class="GemImage_Image" src="file://{resources}/images/custom_game/smithy/red_gem.png" />
                                <Label id="" class="GemAmount_Label" text="4847" />
                                <Panel id="" class="GemLock_Panel">
                                    <Image id="" class="GemLock_Image" src="file://{resources}/images/custom_game/lock_white.png" />
                                </Panel>
                            </Panel>
                            <Panel id="" class="GemContainer_Panel" onactivate="ProcessGemSelectionButtonPress(5)" onmouseover="ShowGemTooltip(5)" onmouseout="HideGemTooltip()">
                                <Image id="" class="GemImage_Image" src="file://{resources}/images/custom_game/smithy/green_gem.png" />
                                <Label id="" class="GemAmount_Label" text="4847" />
                                <Panel id="" class="GemLock_Panel">
                                    <Image id="" class="GemLock_Image" src="file://{resources}/images/custom_game/lock_white.png" />
                                </Panel>
                            </Panel>
                        </Panel>
                        <Panel id="SliderContainer_Panel" class="">
                            <Label id="GemUpdateAmount" class="" text="648/5000" />
                            <Slider id="InsertingStonesSlider" direction="horizontal" increment = "1"/>
                            <Image id="info_Image" src="s2r://panorama/images/status_icons/information_psd.vtex" onmouseover="$.DispatchEvent( 'DOTAShowTextTooltip', $('#info_Image'), $.Localize('#smithy_tooltip_vopros'))" onmouseout="HideGemTooltip()"/>
                        </Panel>
					</Panel>
					<Panel id="UpgradeItemCostPanel">
						<Label id="CostText" text="#ui_custom_shop_upgrade_item_cost" />
						<Label id="GoldCostNumber" text="0" />
						<Image id="GoldIcon" src="s2r://panorama/images/hud/reborn/gold_small_psd.vtex" />
						<Label id="PointBossCostNumber" text="1" />
                        <DOTAItemImage id="PointBossIcon" itemname="" />
					</Panel>
					<Button id="UpgradeButtonPanel">
						<Label class="UpgradeButtonClass" text="#ui_custom_shop_upgrade_item_upgrade_button" />
					</Button>
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
