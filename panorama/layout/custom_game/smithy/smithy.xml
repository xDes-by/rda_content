<root> 
    <styles>
        <include src="file://{resources}/layout/custom_game/smithy/smithy.css" />
        <include src="s2r://panorama/styles/dotastyles.vcss_c" />
    </styles>

    <scripts>
        <include src="file://{resources}/layout/custom_game/smithy/smithy.js" />
    </scripts>

    <Panel class="root" hittest="false" style="width: 100%; height: 100%;">
        <!-- <Panel id="smithy_open_button_panel" onmouseactivate="open()" onmouseover="UIShowCustomLayoutParametersTooltip(MainTooltip, file://{resources}/layout/custom_game/smithy/tool.xml)" onmouseout="UIHideCustomLayoutTooltip(MainTooltip)"/> -->
        <Image class="openRating" id="openRating" onmouseactivate="var sddf = open(); sddf();" src="file://{resources}/images/custom_game/smithy/open_icon.png"/> 
        <Panel id="smithy_main_window_panel" class="smithy_main_window_panel">
		    <Image class = "background_smithy" src="file://{resources}/images/custom_game/smithy/background.png"/>
            <Panel id='smart_mode_panel'>
                <ToggleButton id="smart_toggle" text="Smart mode" />
                <ToggleButton id="shift_toggle" text="Shift mode" />
            </Panel>
            <Image id="smithy_vopros_img" src="file://{resources}/images/custom_game/smithy/vopros.png"/>
            <Panel id="smithy_main_window_gems_panel" class="smithy_main_window_gems_panel">
                <Panel id="smithy_gem_purple_panel" class="smithy_gem_base_class">
                    <Image id="" class="smithy_gem_image" src="file://{resources}/images/custom_game/smithy/purple_gem.png" />
                    <Label id="smithy_purple_label" class="smithy_gem_lable" text="" />
                </Panel>
                <Panel id="smithy_gem_blue_panel" class="smithy_gem_base_class">
                    <Image id="" class="smithy_gem_image" src="file://{resources}/images/custom_game/smithy/blue_gem.png" />
                    <Label id="smithy_blue_label" class="smithy_gem_lable" text="" />
                </Panel>
                <Panel id="smithy_gem_orange_panel" class="smithy_gem_base_class">
                    <Image id="" class="smithy_gem_image" src="file://{resources}/images/custom_game/smithy/orange_gem.png" />
                    <Label id="smithy_orange_label" class="smithy_gem_lable" text="" />
                </Panel>
                <Panel id="smithy_gem_red_panel" class="smithy_gem_base_class">
                    <Image id="" class="smithy_gem_image" src="file://{resources}/images/custom_game/smithy/red_gem.png" />
                    <Label id="smithy_red_label" class="smithy_gem_lable" text="" />
                </Panel>
                <Panel id="smithy_gem_green_panel" class="smithy_gem_base_class">
                    <Image id="" class="smithy_gem_image" src="file://{resources}/images/custom_game/smithy/green_gem.png" />
                    <Label id="smithy_green_label" class="smithy_gem_lable" text="" />
                </Panel>
            </Panel>
            <Image id="smithy_close_button" onmouseactivate="close()" src="file://{resources}/images/custom_game/pet/close.png"/>

            <Panel id="smithy_gold_bar_panel" class="smithy_item_place_panel">
                    <DOTAItemImage id="smuthy_gold_bar_item" class="smithy_dota_item" itemname="" />
                    <Label id="smithy_gold_bar_label" class="smithy_item_label" text="" />
            </Panel>
            <Panel id="smithy_main_item_panel" class="smithy_item_place_panel">
                    <DOTAItemImage id="smuthy_main_item" class="smithy_dota_item" itemname="" />
                    <Label id="smithy_main_item_label" class="smithy_item_label" text="" />
            </Panel>
            <Panel id="smithy_soul_panel" class="smithy_item_place_panel">
                    <DOTAItemImage id="smuthy_soul_item" class="smithy_dota_item" itemname="" />
                    <Label id="smithy_soul_item_label" class="smithy_item_label" text="" />
            </Panel>
            <Panel id="smithy_top_arrow_panel" class="arrow_panel">
                    <!-- <Image id="smithy_gold_bar_image" class="smithy_arrow_item_image" src="file://{resources}/images/custom_game/smithy/gold_bar.png" /> -->
                    <Label id="smithy_top_arrow_label" class="arrow_label" text="0" />
                    <!-- <Image id="" class="smithy_arrow_image" src="file://{resources}/images/custom_game/smithy/top_arrow.png" /> -->
            </Panel>
            <Panel id="smithy_down_arrow_panel" class="arrow_panel">
                <Image id="smithy_arrow_gem_image" class="smithy_arrow_item_image" src="file://{resources}/images/custom_game/smithy/blue_gem.png" />
                <Label id="smithy_down_arrow_label" class="arrow_label" text="0" />
                <!-- <Image id="" class="smithy_arrow_image" src="file://{resources}/images/custom_game/smithy/down_arrow.png" /> -->
            </Panel>
            <!--
            <Panel id="smithy_soul_arrow_panel" class="arrow_panel">
                    <Image id="" class="smithy_arrow_image" src="file://{resources}/images/custom_game/smithy/down_arrow_2.png" />
            </Panel> -->
            <Panel id="smithy_output_item_panel" class="">
                <DOTAItemImage id="smuthy_output" class="" itemname="" /> 
            </Panel>
            <Panel id="smithy_craft_button_panel" class="brightness05">
                <Image id="smitht_craft_btn" class="smithy_item_bg" src="file://{resources}/images/custom_game/smithy/smithy_button.png" />
                <Label id="smithy_craft_button_label" class="arrow_label" text="#done" />
            </Panel>
            <!-- <Panel id="smithy_i_button" >
                <Image id="smithy_i_button_img" class="" src="file://{resources}/images/custom_game/smithy/info.png" />
            </Panel> -->
        </Panel>
    </Panel>
</root>
