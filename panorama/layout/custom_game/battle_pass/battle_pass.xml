<root>
    <styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
        <include src="file://{resources}/layout/custom_game/battle_pass/battle_pass.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/layout/custom_game/battle_pass/battle_pass_variables.js" />
        <include src="file://{resources}/layout/custom_game/battle_pass/battle_pass_view_processing.js" />
        <include src="file://{resources}/layout/custom_game/battle_pass/battle_pass_functions.js" />
    </scripts>

    <snippets>
        <snippet name="tab">
            <Panel id="" class="outer_tab_container">
                <Panel id="" class="inner_tab_container">
                    <Label id="" class="tab_label" text="TAB" />
                </Panel>
            </Panel>
        </snippet>
        <snippet name="scroll_item_column">
            <Panel id="" class="bp_scroll_item_Panel">
                <Panel id="" class="free_tier_reward_Panel">
                    <Panel id="" class="free_tier_reward_image_Panel">
                        <Image id="" class="scroll_reward_Image" src="file://{images}/custom_game/bp/items/talent_exp.png" />
                        <Panel id="" class="scroll_reward_Lock hidden" src="" />
                        <Panel id="" class="GalkaPanel"></Panel>
                        <Panel id="" class="HaveAwardPanel"></Panel>
                        <Label id="" class="reward_item_amount" text="10" />
                    </Panel>
                    <Label id="level_in_scroll_label" class="" text="LEVEL 15" />
                </Panel>
                <Panel id="" class="scroll_level_line_indicator"/>
                <Panel id="" class="donate_tier_reward_Panel">
                    <Panel id="" class="donate_tier_reward_image_Panel donate_tier_reward_image_position_1">
                        <Image id="" class="scroll_reward_Image" src="file://{images}/custom_game/bp/items/talent_exp.png" />
                        <Panel id="" class="scroll_reward_Lock" src="" onmouseover="UIShowTextTooltip( '#battle_pass_lock' )" onmouseout="UIHideTextTooltip()" />
                        <Panel id="" class="GalkaPanel"></Panel>
                        <Panel id="" class="HaveAwardPanel"></Panel>
                        <Label id="" class="reward_item_amount" text="10" />
                    </Panel>
                    <Panel id="" class="donate_tier_reward_image_Panel donate_tier_reward_image_position_2">
                        <Image id="" class="scroll_reward_Image" src="file://{images}/custom_game/bp/items/talent_exp.png" />
                        <Panel id="" class="scroll_reward_Lock" src="" />
                        <Panel id="" class="GalkaPanel"></Panel>
                        <Panel id="" class="HaveAwardPanel"></Panel>
                        <Label id="" class="reward_item_amount" text="10" />
                    </Panel>
                </Panel>
            </Panel>
        </snippet>
    </snippets>

    <Panel class="root" hittest = "false">
        <Panel id="GameBPPanel" class="">
            <!-- TAB -->
            <Panel id="tabs_container" class=""></Panel>
            <!-- /TAB -->
            <Panel id="level_line_container" class="">
                <Label id="level_main_label" class="" text="LEVEL 15" />
                <ProgressBar id="experience_progress_bar" min="0" max="1000" value="500"/>
                <Label id="experience_progress_bar_Label" class="" text="500/1000" />
                <Panel id="collect_all_rewards_button_Panel" class="">
                    <Label id="" class="" text="Собрать все (6)" />
                </Panel>
            </Panel>
            <Panel id="rewards_list_scroll_panel" class="">
                <Image id="" class="scroll_reward_Image" src="file://{images}/custom_game/bp/items/forever_ward.png" />
            </Panel>
        </Panel>
    </Panel>
</root>